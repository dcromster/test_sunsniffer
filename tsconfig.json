{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "types": ["node"],
    "lib": ["es2017"],
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "noImplicitReturns": true,
    "strict": true
  },
  "exclude": ["node_modules"]
}
